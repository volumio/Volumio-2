{
  "page": {
    "label": "Nas"
  },
  "sections": [
    {
      "id": "section_wired_network",
      "element": "section",
      "label": "Mount point",
      "onSave": {"type":"controller", "endpoint":"system_controller/networkfs", "method":"saveShare"},
      "saveButton": {
        "label": "Save",
        "data": [
            "Flac.name",
          "Flac.ip",
          "Flac.fstype",
          "Flac.username",
          "Flac.password",
          "Flac.options"
        ]
      },
      "content": [
        {
          "id": "Flac.name",
          "element": "input",
          "doc" : "Choose a name.",
          "label": "Name",
          "value": "",
          "attributes": [
            {
              "placeholder": "Type share name here"
            }
          ]
        },
        {
          "id": "Flac.ip",
          "type": "ip",
          "element": "input",
          "attributes": [
            {
              "placeholder": "e.g. 192.168.1.1"
            }
          ],
          "label": "Static IP",
          "value": "",
          "visibleIf": {
            "field": "dhcp",
            "value": false
          }
        },
        {
          "id": "Flac.fstype",
          "element": "select",
          "label": "FS Type",
          "value":  {
            "value":"cifs",
            "label": "cifs"
          },
          "options": [
            {
              "value":"cifs",
              "label": "CIFS"
            },
            {
              "value":"nfs",
              "label": "NFS"
            }
          ]

        },
        {
          "id": "Flac.username",
          "type": "string",
          "element": "input",
          "attributes": [
            {
              "placeholder": "Type username here"
            }
          ],
          "label": "Username",
          "value": "",
          "visibleIf": {
          }
        },
        {
          "id": "Flac.password",
          "type": "password",
          "element": "input",
          "attributes": [
            {
              "placeholder": "Type password here"
            }
          ],
          "label": "Password",
          "value": "",
          "visibleIf": {
          }
        },
        {
          "id": "Flac.options",
          "type": "string",
          "element": "input",
          "attributes": [
            {
              "placeholder": "Add options here"
            }
          ],
          "label": "Options",
          "value": "",
          "visibleIf": {
          }
        }




      ]
    }
  ]
}
